{
	"include": [
		"**/*",
		"**/.server/**/*",
		"**/.client/**/*",
		".react-router/types/**/*"
	],
	"compilerOptions": {
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"types": [
			"node",
			"vite/client"
		],
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"target": "ESNext",
		"module": "Preserve",
		"moduleDetection": "force",
		"jsx": "react-jsx",
		"rootDirs": [
			".",
			"./.react-router/types"
		],
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"./app/*"
			]
		},
		"esModuleInterop": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"allowJs": true,
	}
}